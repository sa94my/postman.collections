						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"const response = pm.response.json();\r",
							"const availableBooks = response.filter((book)=> book.available == true);\r",
							"const book = availableBooks[0];\r",
							"pm.test(\"a book exists\",()=> {\r",
							"    pm.expect(book).to.be.an('object');\r",
							"    pm.expect(book.available).to.be.true;\r",
							"});\r",
							"if(book){\r",
							"pm.collectionVariables.set(\"bookID\", availableBooks[0].id);\r",
							"\r",
							"}\r",
							""
						],
